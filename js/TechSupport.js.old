	        		return this.point.name+' #: <b>'+this.point.y+'</b><br>Percentage: <b>'+Highcharts.numberFormat(this.point.percentage,1)+'%</b>';
	        	}
	        },
	        series: options
	    });

		//if no data
		if(data[i].length==0)
		{
			chart.hideLoading();
			chart.showLoading("No Data Available");
			chart.setSize(chart.width, 100);
		}

		chart.render();
		options = [];
		//data = {};
	}
	
